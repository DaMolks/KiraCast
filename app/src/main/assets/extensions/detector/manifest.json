{
  "manifest_version": 2,
  "name": "KiraCast Detector",
  "version": "0.1",
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["<all_urls>", "tabs", "activeTab", "storage", "webRequest", "webRequestBlocking"]
}
