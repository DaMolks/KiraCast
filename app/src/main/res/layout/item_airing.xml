<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="54dp" android:layout_height="72dp"
        android:scaleType="centerCrop" android:contentDescription="@null"/>

    <LinearLayout
        android:orientation="vertical" android:layout_marginStart="12dp"
        android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">

        <TextView android:id="@+id/title"
            android:textStyle="bold" android:textSize="16sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/sub"
            android:textSize="13sp" android:textColor="#666"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/time"
            android:textSize="12sp" android:textColor="#888"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
